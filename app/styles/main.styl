@import 'navbar'
@import 'responsive'
@import 'search'
@import 'grid'

@import url(https://fonts.googleapis.com/css?family='Open+Sans|Raleway')

body
  font-family 'Open Sans', sans-serif

.justify
  text-align justify

.center
  text-align center

.absolute
  position absolute

.fixed
  position fixed

html
  background $main-section-bg

.center-loading
  top 50%
  width 100%
  z-index 2
  margin-left -5%

.margin-checkbox
  margin-left 3%
.margin-left
  margin-left 15%

.padding-top
  padding-top 2%

#list
  -webkit-animation-delay 0.125s
  animation-delay 0.125s
  -webkit-animation-duration 1.5s
  animation-duration 1.5s
