@import 'colors'

.og-grid li > a
.og-grid li > a img
  -webkit-box-shadow: 3px 3px 7px rgba(0, 0, 0, 0.5);
  box-shadow 3px 3px 7px rgba(0, 0, 0, 0.5)
  border-radius 10px
  border: 1px;
  outline: 1px;
  display: block;
  position: relative;

.og-grid
  li
    a
      figure
        span
          margin-top 50%

.og-expander
  p
    font-size 16px
    text-align justify
    font-family 'Raleway', sans-serif
    .fa-globe
      color $grid-info
      background $grid-info-bg
    .fa-money
      color $grid-success
      background $grid-success-bg

.og-details
  h3
    font-family 'Open Sans', sans-serif
    font-weight 600

.elastislide-wrapper
  visibility hidden
